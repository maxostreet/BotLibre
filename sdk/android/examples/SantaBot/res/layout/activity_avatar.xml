<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#FFFFFF"
    android:orientation="horizontal" >
    	            
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
        
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:layout_weight="1">
	                    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
                
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
    <CheckBox
        android:id="@+id/defaultCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Default" />
    <CheckBox
        android:id="@+id/happyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Happy" />
    <CheckBox
        android:id="@+id/sadCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sad" />
    <CheckBox
        android:id="@+id/likeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Like" />
    <CheckBox
        android:id="@+id/dislikeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dislike" />
    <CheckBox
        android:id="@+id/confidentCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Confident" />
    <CheckBox
        android:id="@+id/afraidCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Afraid" />
    <CheckBox
        android:id="@+id/calmCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Calm" />
    <CheckBox
        android:id="@+id/angerCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Anger" />
    <CheckBox
        android:id="@+id/boredCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bored" />
    <CheckBox
        android:id="@+id/seriousCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Serious" />
    </LinearLayout>
    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
    <CheckBox
        android:id="@+id/noneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="None" />
    <CheckBox
        android:id="@+id/ecstaticCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ecstatic" />
    <CheckBox
        android:id="@+id/cryingCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Crying" />
    <CheckBox
        android:id="@+id/loveCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Love" />
    <CheckBox
        android:id="@+id/hateCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hate" />
    <CheckBox
        android:id="@+id/courageousCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Courageous" />
    <CheckBox
        android:id="@+id/panicCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Panic" />
    <CheckBox
        android:id="@+id/sereneCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Serene" />
    <CheckBox
        android:id="@+id/rageCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rage" />
    <CheckBox
        android:id="@+id/surpriseCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Surprise" />
    <CheckBox
        android:id="@+id/laughterCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Laughter" />
    </LinearLayout>
        
    </LinearLayout>
    
    </ScrollView>
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    
    <Button
        android:id="@+id/menuButton"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_margin="1dp"
        android:background="@drawable/menu"
        android:onClick="menu"
        android:text="" />
    
    <Button
        android:id="@+id/tagButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/ok_button"
        android:onClick="tag"
        android:text="Tag"
        android:textColor="@color/lgrey" />
    
    </LinearLayout>
    
    </LinearLayout>

    <ListView
        android:id="@+id/avatarsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" 
        android:listSelector="@android:color/darker_gray"/>        
        
    </LinearLayout>  
    
</LinearLayout>